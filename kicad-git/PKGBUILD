pkgname=kicad-git
pkgver=
pkgrel=

pkgdesc='eCAD suite for modern electronics development'
url='https://github.com/KiCad/kicad-source-mirror'
arch=('x86_64')
license=('GPL2')

depends=('wxgtk')
makedepends=('git' 'bzr' 'cmake' 'doxygen')

provides=('kicad')
conflicts=('kicad')

source=('https://github.com/KiCad/kicad-source-mirror')
install='kicad-git.install'

md5sum=('SKIP')

pkgver() {
	cd kicad
	git describe | sed 's/-/.r/; s/-/./'
}

build() {
	cd kicad
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DKICAD_TESTING_VERSION=ON
}

package() {
	cd kicad
	make DESTDIR="$pkgdir" install
}
